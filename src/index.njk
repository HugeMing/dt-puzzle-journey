{% extends "src/_base.njk" %}

{% block content %}
    <div>
        <div id="animation-container">
            <div id="animation-blindfold"></div>
            <div id="stage-welcome-ui" class="hidden">
                <div class="grid-item header">
                    <h1>A DT Puzzle Journey</h1>
                </div>
                <div class="grid-item item-1">Notice #1</div>
                <div class="grid-item item-2">Notice #2</div>
                <div class="grid-item footer">
                    <div id="browser-check" class="text-center">
                        {# <div class="spinner"></div> #}
                        <p>Checking your browser is good to go...</p>
                    </div>
                    <div id="welcome-end" class="button d-none">
                        Start the journey
                    </div>
                </div>
            </div>
            <div id="stage-landscape-view" class="hidden">
                <object id="landscape-view" type="image/svg+xml" data="img/landscape-view.svg"></object>
                <div id="landscape-ui-1">
                    <p class="narrative-text">
                        It is time to return home to my whƒÅnau
                    </p>
                </div>
                <div id="landscape-ui-2" class="text-center">
                    <p class="narrative-text">
                        Not far to go now...
                    </p>
                    <div id='landscape-stage-end' class="button">Step into the forest</div>
                </div>
            </div>
            <div id="stage-fern" class="hidden">
                <object id="fern-svg" type="image/svg+xml" data="img/fern-interactive.svg"></object>
                <div id="fern-container">
                    <div id="fern-leaf-16" class="fern-leaf">
                        <div id="fern-leaf-16-front" class="fern-leaf-side fern-leaf-front"></div>
                        <div id="fern-leaf-16-back" class="fern-leaf-side fern-leaf-back"></div>
                    </div>
                    <div id="fern-leaf-8" class="fern-leaf">
                        <div id="fern-leaf-8-front" class="fern-leaf-side fern-leaf-front"></div>
                        <div id="fern-leaf-8-back" class="fern-leaf-side fern-leaf-back"></div>
                    </div>
                    <div id="fern-leaf-4" class="fern-leaf">
                        <div id="fern-leaf-4-front" class="fern-leaf-side fern-leaf-front"></div>
                        <div id="fern-leaf-4-back" class="fern-leaf-side fern-leaf-back"></div>
                    </div>
                    <div id="fern-leaf-2" class="fern-leaf">
                        <div id="fern-leaf-2-front" class="fern-leaf-side fern-leaf-front"></div>
                        <div id="fern-leaf-2-back" class="fern-leaf-side fern-leaf-back"></div>
                    </div>
                    <div id="fern-leaf-1" class="fern-leaf">
                        <div id="fern-leaf-1-front" class="fern-leaf-side fern-leaf-front"></div>
                        <div id="fern-leaf-1-back" class="fern-leaf-side fern-leaf-back"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center credits">
        Copyright and license information will be displayed here.
    </div>
{% endblock %}
